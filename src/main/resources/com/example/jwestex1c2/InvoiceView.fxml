<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="539.0" prefWidth="847.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jwestex1c2.InvoiceViewController">
    <padding>
        <Insets bottom="20.0" left="200.0" right="200.0" top="200.0" />
    </padding>
   <GridPane translateX="-100.0" translateY="-200.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="147.0" minWidth="100.0" prefWidth="147.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="300.0" prefWidth="200.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="50.0" prefWidth="200.0" />
     </columnConstraints>
     <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Label disable="true" text="Invoice Id:" GridPane.rowIndex="1" />
         <TextField fx:id="invoiceIDTextField" disable="true" promptText="Invoice Id" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Label text="Status:" GridPane.rowIndex="2" />
         <TextField fx:id="statusTextField" promptText="Status" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <Label text="Invoice Date:" GridPane.rowIndex="3" />
         <TextField fx:id="invoiceDateTextField" promptText="Invoice Date" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <TextField fx:id="dueDateTextField" promptText="Due Date" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <Label text="Due Date:" GridPane.rowIndex="4" />
         <Label text="Select Invoice:" />
         <ComboBox fx:id="invoicesComboBox" onAction="#invoiceComboBoxSelected" prefHeight="26.0" prefWidth="300.0" GridPane.columnIndex="1" />
         <Label text="Select LineItem:" GridPane.rowIndex="6" />
         <Label text="Description:" GridPane.rowIndex="8" />
         <Label text="Amount:" GridPane.rowIndex="9" />
         <ListView fx:id="lineItemListView" onMouseClicked="#lineItemClicked" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
         <TextField fx:id="amountTextField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
         <GridPane GridPane.columnIndex="2" GridPane.rowIndex="6">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addClicked" text="+" />
               <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deleteClicked" text="x" GridPane.rowIndex="1" />
            </children>
         </GridPane>
         <Button fx:id="saveInvoiceBtn" mnemonicParsing="false" onAction="#saveInvoiceClicked" text="Save Invoice" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <Button fx:id="saveLineItemBtn" mnemonicParsing="false" onAction="#saveLineItemClicked" text="Save Line Item" GridPane.columnIndex="1" GridPane.rowIndex="10" />
         <Label text="Total:" GridPane.rowIndex="7" />
         <TextField fx:id="totalTextField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="7" />

      </children>
   </GridPane>
    
</VBox>
